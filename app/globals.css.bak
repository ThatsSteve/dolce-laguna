/* Pulsanti animati */
@keyframes pulse-light {
  0%,
  100% {
    opacity: 0.2;
  }
  50% {
    opacity: 0.4;
  }
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
}

@keyframes shine {
  from {
    background-position: -200% 0;
  }
  to {
    background-position: 200% 0;
  }
}

.animate-pulse-light {
  animation: pulse-light 2s ease-in-out infinite;
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

